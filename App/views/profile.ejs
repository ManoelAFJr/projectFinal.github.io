          </div>
        </div>
        <div class="" style="margin:10px; padding: 10px;">
          <% donors.forEach(function(user) { %>
            <div class="col-md-5" style="margin: left;">
              @<%= user.username %> <p style="color: brown;"> Donated: <%= user.date %></p>
            </div>
